<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/msg"
        android:layout_width="wrap_content"
        android:maxWidth="280dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:textSize="18dp"
        android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
        android:background="@drawable/recieve_message"
        />

    <TextView
        android:id="@+id/messageAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="오후 08:11"
        android:textSize="11dp"
        app:layout_constraintBottom_toBottomOf="@id/msg"

        app:layout_constraintLeft_toRightOf="@id/msg" />

</androidx.constraintlayout.widget.ConstraintLayout>