<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
            <ImageView
                android:id="@+id/roomImg"
                android:scaleType="centerCrop"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/dog"
                android:background="@drawable/onlyrd"
                android:layout_margin="15dp"
                android:layout_marginTop="18dp"


                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/roomName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/roomImg"
                android:text="방 이름이 들어감"
                android:layout_marginLeft="15dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="20dp"
                android:textSize="24sp"
                />


        <TextView
            android:id="@+id/size"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="사이즈 들어감"
            android:textSize="15dp"
            app:layout_constraintLeft_toLeftOf="@+id/roomName"
            app:layout_constraintTop_toBottomOf="@+id/roomName" />

        <TextView
            android:id="@+id/cnt"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="30dp"
            android:text="자릿수"
            android:textSize="15dp"
            app:layout_constraintLeft_toLeftOf="@+id/size"
            app:layout_constraintTop_toBottomOf="@+id/size" />

        <TextView
            android:id="@+id/roomPrice"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginRight="30dp"
            android:text="가격정보가 들어갈 자리"
            android:textSize="22dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/cnt" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/roomImg"
            android:layout_marginTop="18dp"
            android:layout_marginHorizontal="8dp"
            android:background="#DDDDDD"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
