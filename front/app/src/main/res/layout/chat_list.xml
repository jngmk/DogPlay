<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/chatpf"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/dog"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/chatNic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="메롱이"
        android:textSize="25dp"
        android:layout_margin="25dp"
        app:layout_constraintLeft_toRightOf="@id/chatpf"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/chatTop"
        android:layout_height="45dp"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/chatpf"
        app:layout_constraintTop_toBottomOf="@id/chatNic"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="15dp"
        android:maxWidth="270dp"
        android:text="안녕하세요가나다라마바사아자차카타파하가나다라마바사아자"
        />
    <TextView
        android:id="@+id/messageAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        app:layout_constraintTop_toTopOf="@id/chatNic"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="#888888"
        android:layout_marginTop="135dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>